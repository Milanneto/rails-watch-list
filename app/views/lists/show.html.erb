<div class="container">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, collection: Movie.all %>
    <%= f.input :comment %>
    <%= f.submit%>
  <% end %>

  <div class="list-group" >
    <ol>
    <li class="list-group-item card" style="width: 18rem;">
      <% @list.movies.each do |movie| %>
        <%= image_tag movie.poster_url, class: "card-img-top card-body" %>
        <h3 class="card-title"><%= movie.title %></h3>
        <p class="card-text"><%= movie.overview %></p>
        <p class="card-rating"><%= movie.rating %>‚≠ê</p>
      <% end %>
      </li>
    </ol>
    <%= link_to "Display all lists", lists_path, class: "btn btn-primary text-decoration-none" %>
  </div>
</div>
